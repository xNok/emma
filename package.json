{
  "name": "emma",
  "version": "0.1.0",
  "description": "Embeddable forms system for Hugo websites",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -pt run dev",
    "build": "yarn workspaces foreach -Apt run build",
    "test": "yarn workspaces foreach -Aipt run test",
    "postinstall": "husky",
    "test:manual": "yarn workspace @emma/form-renderer exec yarn --cwd test-server dev",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "yarn workspaces foreach -Apt run clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "typescript": "^5.9.3",
    "vitest": "^1.1.0"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/emma.git"
  },
  "keywords": [
    "forms",
    "hugo",
    "cloudflare",
    "embeddable",
    "static-site"
  ],
  "author": "Your Name",
  "license": "MIT"
}
